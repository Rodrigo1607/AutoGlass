@using AutoGlass.Model
 @model List<Produto>

@{
    ViewData["Title"] = "Listagem de Produtos";
    
}

<div class="text-center">
    <div class="d-grid gap-2 d-dm-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Criar" asp-asp-controller="Produto"> Adicionar Novo Produto</a>

    </div>

    <br />
    <h1 class="display-4">Listagem de Produtos!</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Código</th>
                <th scope="col">Descrição</th>
                <th scope="col">Situação</th>
                <th scope="col">Data de Fabricação</th>
                <th scope="col">Data de Validade</th>
                <th scope="col">Código Fornecedor</th>
                <th scope="col">Descrição Fornecedor</th>
                <th scope="col">CNPF Fornecedor</th>
                <th scope="col">Ações</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Codigo</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Status</td>
                    <td>@produto.DataFabricacao</td>
                    <td>@produto.DataValidade</td>
                    <td>@produto.CodigoFornecedor</td>
                    <td>@produto.DescricaoFornecedor</td>
                    <td>@produto.CNPJFornecedor</td>
                                     
                
                </tr>
            }
            
        </tbody>
    </table>
</div>