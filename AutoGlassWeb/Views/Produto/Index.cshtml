@{
    ViewData["Title"] = "Listagem de Produtos";
}

<div class="text-center">
    <div class="d-grid gap-2 d-dm-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-action="Criar" asp-asp-controller="Produto"> Adicionar Novo Produto</a>

    </div>

    <br />
    <h1 class="display-4">Listagem de Produtos!</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Código</th>
                <th scope="col">Descrição</th>
                <th scope="col">Situação</th>
                <th scope="col">Data de Fabricação</th>
                <th scope="col">Data de Validade</th>
                <th scope="col">Código Fornecedor</th>
                <th scope="col">Descrição Fornecedor</th>
                <th scope="col">CNPF Fornecedor</th>
                <th scope="col">Ações</th>
            </tr>

        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>1</td>
                <td>Mesa</td>
                <td>Ativo</td>
                <td>21/06/2024</td>
                <td>21/06/2024</td>
                <td>111</td>
                <td>Rodrigo</td>
                <td>123</td>
                <td>
                    <div class="d-grid gap-2 d-md-block" role="group">
                        <a role="button" class="btn btn-warning" asp-controller="Produto" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Produto" asp-action="ApagarConfirmacao">Apagar</a>
                    </div>
                </td>

            </tr>
            
        </tbody>
    </table>
</div>